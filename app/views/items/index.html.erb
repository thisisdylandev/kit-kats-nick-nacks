<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Inventory</h1>
    <%= link_to 'New item', new_item_path, class: "btn btn-secondary" %>
  </div>

  <div id="items" class="min-w-full mt-4">
    <% @items.each do |item| %>
      <%= link_to item.name, item, class: "rounded-lg py-3 px-5 btn btn-primary font-medium" %>
    <% end %>
  </div>
</div>
